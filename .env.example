# --- ACCESS CONFIGURATION (ADMIN) ---
# n8n will create this user automatically on startup
N8N_INITIAL_USER_EMAIL=admin@example.com
N8N_INITIAL_USER_PASSWORD=change_this_password_123
N8N_INITIAL_USER_FIRST_NAME=Admin
N8N_INITIAL_USER_LAST_NAME=Mibo

# --- SECURITY AND PERSISTENCE ---
# Key to encrypt credentials in the DB. 
# IMPORTANT: Keep the same between restarts/deploys to avoid losing access to saved credentials.
N8N_ENCRYPTION_KEY=once_set_do_not_change_this_random_string

# --- NETWORK CONFIGURATION (RAILWAY) ---
# In Railway, PORT is assigned dynamically. 
# WEBHOOK_URL must be the public URL provided by Railway.
# Example in Railway: https://${RAILWAY_STATIC_URL}/
WEBHOOK_URL=http://localhost:5678/
PORT=5678

# --- DATABASE (OPTIONAL) ---
# By default n8n uses SQLite internally. 
# If you add a Postgres database in Railway, use these:
# DB_TYPE=postgresdb
# DB_POSTGRESDB_DATABASE=${POSTGRES_URL}

# --- EXTRAS ---
N8N_DIAGNOSTICS_ENABLED=false
N8N_SKIP_ONBOARDING=true
